<div id="overview">

  <%= link_to "Create new #{resource_instance_name.to_s.humanize}", polymorphic_url([parent_or_nil, resource_class], action: :new), class: "btn btn-primary btn-right" %>
  <h1><%= resource_class.model_name.human.pluralize %></h1>

  <%= render "scope_filters" if scopes_configuration %>
  <%= render "index_top" %>

  <table class="table table-hover">
    <thead>
      <tr>
        <% list_fields.each do |list_field| %>
          <th><%= list_field.humanize %></th>
        <% end %>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render "list", collection: collection, list_fields: list_fields  %>
    </tbody>
  </table>

  <%= will_paginate collection %>

</div>
