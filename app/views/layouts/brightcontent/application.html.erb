<!DOCTYPE html>
<html>
<head>
  <title>Brightcontent</title>
  <%= stylesheet_link_tag    "brightcontent/application", :media => "all" %>
  <%= javascript_include_tag "brightcontent/application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <div id="user_menu">
    <%= link_to "Logout", logout_path %>
  </div>

  <nav>
    <ul id="menu">
      <li><%= link_to "Pages", pages_path %></li>
      <% menu_items.each do |menu_item_name| %>
        <li><%= link_to menu_item_name.humanize, url_for(controller: menu_item_name) %></li>
      <% end %>
    </ul>
  </nav>
<% end %>

<%= render "brightcontent/application/show_flash_names" %>

<%= yield %>

</body>
</html>
