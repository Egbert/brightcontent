<%= submit_tag "Save" %>
<%= submit_tag "Save and continue", :name => "commit_and_continue" %> or
<%= link_to "cancel", [:admin, @model] %>

<script type="text/javascript">
  $(function () {
    $('form').submit(function () {
      if ( $(this).hasClass('disabled') ) { return false }
      
      setTimeout(function () {
        $('form').addClass('disabled');
      }, 1);
    });
  });
</script>